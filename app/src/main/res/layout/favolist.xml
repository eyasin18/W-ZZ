<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/detaillist_profile_pic"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/avatar_placeholder"
        app:riv_border_width="0dip"
        app:riv_border_color="#ffffff"
        app:riv_oval="true"/>

    <TextView
        android:paddingTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Fehler beim Laden des Witzes"
        android:id="@+id/detaillist_inhalt"
        android:textColor="#212121"
        android:paddingLeft="72dp"
        android:paddingRight="16dp"
        android:paddingBottom="42dp"
        android:background="?android:attr/selectableItemBackground"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#B6B6B6"
        android:id="@+id/view"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_alignBottom="@+id/detaillist_inhalt"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:id="@+id/favolist_favor"
        android:padding="8dp"
        android:src="@drawable/ic_heart_grey600_18dp"
        android:layout_above="@+id/view"
        android:layout_marginRight="32dp"
        android:layout_alignParentEnd="true" />

</RelativeLayout>