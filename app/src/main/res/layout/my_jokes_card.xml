<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/my_jokeslist_profile_pic"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <TextView
        android:paddingTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Fehler beim Laden des Witzes"
        android:id="@+id/ad_my_jokeslist_placeholder"
        android:textColor="#212121"
        android:paddingLeft="72dp"
        android:paddingRight="16dp"
        android:paddingBottom="36dp"
        android:background="?android:attr/selectableItemBackground"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#B6B6B6"
        android:layout_below="@id/ad_my_jokeslist_placeholder"
        android:id="@+id/view"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/error"
        android:layout_marginRight="32dp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="8dp"
        android:id="@+id/my_jokeslist_voteCounter"
        android:layout_alignBottom="@+id/view"/>

</RelativeLayout>